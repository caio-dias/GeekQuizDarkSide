<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.senac.caiodiasaula2.geekquizdarkside.MeuGrupo"
    tools:showIn="@layout/activity_meu_grupo">

    <TextView
        android:id="@+id/titulo"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Grupo"
        android:paddingBottom="20dp"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/subtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Participantes do grupo"
        android:paddingBottom="20dp"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do participante"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do participante"
        android:paddingBottom="20dp"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do participante"
        android:paddingBottom="20dp"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do participante"
        android:paddingBottom="20dp"
        android:textColor="#000000"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/statusDoGrupo"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status do grupo"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"
        android:textSize="16dp"
        />

    <RadioGroup
        android:id="@+id/grupoStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >

        <RadioButton
            android:id="@+id/statusAberto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Aberto"/>

        <RadioButton
            android:id="@+id/statusFechado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fechado"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <EditText
            android:id="@+id/novoNomeDoGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Renomear grupo"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:height="20dp"
            android:text="Alterar nome"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sairDoGrupo"
            android:background="#CCC"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_marginRight="30dp"
            android:text="Sair do Grupo"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/excluirGrupo"
            android:background="#A52A2A"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Excluir Grupo"/>
    </LinearLayout>
</LinearLayout>
